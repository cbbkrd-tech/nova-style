{
  "name": "nova-style",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "storefront"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:storefront\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:storefront": "cd storefront && npm run dev",
    "build": "npm run build:backend && npm run build:storefront",
    "build:backend": "cd backend && npm run build",
    "build:storefront": "cd storefront && npm run build",
    "seed": "cd backend && npm run seed",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "install:all": "npm install && cd backend && npm install && cd ../storefront && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
